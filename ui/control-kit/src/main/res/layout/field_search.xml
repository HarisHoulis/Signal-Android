<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:parentTag="androidx.appcompat.widget.LinearLayoutCompat">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/field_search_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/field_search_shape"
        android:paddingVertical="@dimen/spacing_sm"
        android:paddingHorizontal="@dimen/spacing_md">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/field_search_lens"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:src="@drawable/ic_lens"
            app:tint="@color/content_30" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/field_search_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            android:ellipsize="end"
            android:inputType="textVisiblePassword"
            android:imeOptions="actionSearch"
            android:background="@null"
            android:textAppearance="?textAppearanceBody2_SemiBold"
            android:textColor="@color/content"
            android:includeFontPadding="false"
            android:paddingHorizontal="@dimen/spacing_sm"/>

    </androidx.appcompat.widget.LinearLayoutCompat>
</merge>