<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:parentTag="androidx.appcompat.widget.LinearLayoutCompat">

    <InputContainer
        android:id="@+id/input_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/text_field_height"
        android:paddingHorizontal="@dimen/spacing_md"
        android:paddingVertical="@dimen/spacing_sm">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_hint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAppearance="?textAppearanceBody2_Regular"
            android:textColor="@color/content_50"
            android:textDirection="locale"
            android:lines="1"
            android:ellipsize="end"

            app:layout_constraintStart_toStartOf="@id/txt_prefix"
            app:layout_constraintEnd_toEndOf="@id/txt_input"

            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_prefix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textDirection="locale"

            android:textAppearance="?textAppearanceBody1_SemiBold"
            android:textColor="@color/content"

            android:visibility="gone"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/txt_input"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/txt_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:textAppearance="?textAppearanceBody1_SemiBold"
            android:textAlignment="viewStart"
            android:textDirection="locale"
            android:textColor="@color/content"
            android:background="@null"
            android:textCursorDrawable="@drawable/text_field_caret_shape"

            android:layout_marginEnd="@dimen/spacing_sm"

            app:layout_constraintStart_toEndOf="@id/txt_prefix"
            app:layout_constraintEnd_toStartOf="@id/btn_end_icon"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_end_icon"
            android:layout_width="@dimen/img_dim_medium"
            android:layout_height="@dimen/img_dim_medium"

            android:visibility="gone"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </InputContainer>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_state_text"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textColor="@color/solid_red"
        android:textAppearance="?textAppearanceBody2_SemiBold"
        android:textDirection="locale"

        android:layout_marginTop="@dimen/spacing_sm"

        android:visibility="gone"/>

</merge>