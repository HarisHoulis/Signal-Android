<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <com.app.signal.control_kit.CircularImageView
        android:id="@+id/stock_info_img_logo"
        android:layout_width="@dimen/stock_logo_width"
        android:layout_height="@dimen/stock_logo_height"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/stock_info_txt_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginHorizontal="@dimen/spacing_sm"
        android:layout_marginBottom="@dimen/spacing_xs"
        android:ellipsize="end"

        android:lines="1"
        android:textAppearance="?textAppearanceH4_SemiBold"
        android:textColor="@color/content"
        android:includeFontPadding="false"

        android:textDirection="locale"

        app:layout_constraintStart_toEndOf="@id/stock_info_img_logo"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintTop_toTopOf="@id/stock_info_img_logo"
        app:layout_constraintBottom_toTopOf="@id/stock_info_txt_symbol"
        app:layout_constraintWidth="wrap_content"

        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintHorizontal_bias="0.0"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/stock_info_txt_symbol"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:ellipsize="end"
        android:lines="1"

        android:textAppearance="?textAppearanceBody2_SemiBold"
        android:textColor="@color/content_30"
        android:textDirection="locale"
        android:includeFontPadding="false"

        app:layout_constraintStart_toStartOf="@id/stock_info_txt_title"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintTop_toBottomOf="@id/stock_info_txt_title"
        app:layout_constraintBottom_toBottomOf="@id/stock_info_img_logo"

        app:layout_constraintHorizontal_bias="0.0"/>

</merge>